/* 页面整体容器 */
.container {
  background: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 个人信息区 */
.profile-section {
  height: 33vh;
  background: #fff;
  padding: 40rpx;
  display: flex;
  align-items: center;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1); /* 增加阴影效果 */
  margin-bottom: 20rpx;
}

/* 头像容器 */
.avatar-box {
  position: relative;
  margin-right: 40rpx;
}

/* 头像 */
.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: #eee;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1); /* 头像增加阴影效果 */
}

/* 编辑图标 */
.edit-icon {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 0;
  bottom: 0;
  background: #fff;
  border-radius: 50%;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.15); /* 提升编辑图标的质感 */
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 用户信息区域 */
.user-info {
  flex: 1;
}

/* 用户名 */
.username {
  font-size: 36rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
  line-height: 1.4;
}

/* 用户简介 */
.bio {
  font-size: 28rpx;
  color: #999;
  line-height: 1.6;
}

/* 功能操作区 */
.action-section {
  padding: 30rpx;
  flex: 1;
}

/* 每个操作卡片 */
.action-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 6rpx 18rpx rgba(0, 0, 0, 0.12); /* 提升操作卡片的阴影效果 */
  transition: all 0.3s ease; /* 添加平滑过渡效果 */
}

/* 操作图标 */
.action-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 24rpx;
  background: #2196F3; /* 操作图标背景色更醒目 */
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1); /* 图标阴影 */
}

/* 操作文本 */
.action-text {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  letter-spacing: 1px; /* 增加字母间距，提高可读性 */
}

/* 向右箭头 */
.arrow {
  width: 32rpx;
  height: 32rpx;
  margin-left: 12rpx;
  /* background: url('/miniprogram/images/arrow-right.png') no-repeat center center; */
  background-size: contain;
}

/* 卡片点击时效果 */
.action-card:active {
  transform: scale(0.98); /* 点击时缩小 */
  box-shadow: 0 8rpx 18rpx rgba(0, 0, 0, 0.2); /* 加强点击时的阴影 */
}
