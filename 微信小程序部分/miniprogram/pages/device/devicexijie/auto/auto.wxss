/* 页面整体容器 */
.container {
  display: flex;
  flex-direction: column;
  padding: 20px;
  background-color: #f5f5f5;
  height: 100vh;
}

/* 固定起始时间模块 */
.fixed-start-time-section {
  background-color: #ffffff;
  border-radius: 10px;
  padding: 20px;
  box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
  margin-bottom: 30px;
  flex-shrink: 0; /* 防止此区域收缩 */
  position: sticky;
  top: 0;
  z-index: 10;
  width: 100%;
}

/* 输入框与选择框 */
.input-group {
  margin-bottom: 20px;
}

.input-group label {
  font-size: 16px;
  color: #333;
}

.picker {
  padding: 10px;
  background-color: #e9ecef;
  border-radius: 5px;
  text-align: center;
}

.create-button {
  width: 100%;
  padding: 12px;
  background-color: #007bff;
  color: white;
  border: none;
  border-radius: 5px;
  font-size: 16px;
  margin-top: 20px;
}

/* 错误提示 */
.error-message {
  color: red;
  text-align: center;
  margin-bottom: 10px;
}

/* 记录列表 */
.record-list {
  flex-grow: 1; /* 让记录区域占满剩余空间 */
  overflow-y: auto; /* 添加滚动条 */
  margin-bottom: 30px;
}

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #ffffff;
  padding: 15px;
  margin-bottom: 15px; /* 间隔设置 */
  border-radius: 5px;
  box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
}

/* 删除按钮 */
.delete-button {
  background-color: red;
  color: white;
  padding: 5px 10px;
  border: none;
  border-radius: 5px;
}

/* 固定底部按钮 */
.button-group {
  display: flex;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  width: 100%;
  padding: 10px 20px;
  background-color: #fff;
  box-shadow: 0px -2px 5px rgba(0, 0, 0, 0.1);
}

.save-button, .exit-button {
  width: 48%;
  padding: 12px;
  border: none;
  border-radius: 5px;
  font-size: 16px;
}

.save-button {
  background-color: #28a745;
  color: white;
}

.exit-button {
  background-color: #dc3545;
  color: white;
}
